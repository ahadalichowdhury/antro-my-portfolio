---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getPostsCollection } from '../../lib/models';
import type { BlogPost } from '../../lib/models';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/blog', 404);
}

const postsCollection = await getPostsCollection();
// Try to find by slug first, then by _id if slug matches
let post = await postsCollection.findOne({ slug, published: true });
if (!post) {
  // Try finding by _id if slug is an ObjectId string
  try {
    const { ObjectId } = await import('mongodb');
    if (ObjectId.isValid(slug)) {
      post = await postsCollection.findOne({ _id: new ObjectId(slug) });
      if (post) {
        // Map old schema
        post = {
          ...post,
          description: post.description || post.excerpt || '',
          createdAt: post.createdAt || post.date || new Date(),
          published: post.published !== undefined ? post.published : true,
          slug: post.slug || post._id?.toString() || '',
        };
      }
    }
  } catch (e) {
    // Ignore
  }
}

if (!post) {
  return Astro.redirect('/blog', 404);
}

const ogImage = post.coverImage || '/resource/emojis.com panda-bear-full-body-scratching.png';
---

<BaseLayout
  title={`${post.title} - S. M. Ahad Ali Chowdhury`}
  description={post.description}
  ogImage={ogImage}
  ogType="article"
  canonicalUrl={`/blog/${post.slug}`}
>
  <div class="container">
    <Header />

    <!-- Blog Post -->
    <article class="blog-post" data-post-id={post._id?.toString() || post.slug}>
      <header class="post-header">
        <h1>{post.title}</h1>
        {post.coverImage && (
          <div style="margin: 24px 0; width: 100%;">
            <img 
              src={post.coverImage} 
              alt={post.title}
              style="
                width: 100%;
                max-height: 500px;
                object-fit: cover;
                border-radius: 8px;
                border: 1px solid var(--border-color);
              "
            />
          </div>
        )}
        <p class="post-date">
          {new Date(post.createdAt).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </p>
        <div style="display: flex; gap: 16px; margin-top: 8px; font-size: 14px; color: var(--text-secondary);">
          <span>üëÅÔ∏è {post.viewCount || 0} {post.viewCount === 1 ? 'view' : 'views'}</span>
          {post.readingTimes && post.readingTimes.length > 0 && (
            <span>
              ‚è±Ô∏è {Math.round(post.readingTimes.reduce((a: number, b: number) => a + b, 0) / post.readingTimes.length)}s average reading time
            </span>
          )}
        </div>
        {post.tags && post.tags.length > 0 && (
          <div style="margin-top: 12px;">
            {post.tags.map((tag) => (
              <span
                style="
                  display: inline-block;
                  padding: 4px 12px;
                  margin-right: 8px;
                  background-color: var(--accent-color);
                  color: white;
                  border-radius: 4px;
                  font-size: 13px;
                "
              >
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <div class="post-content" set:html={post.content}></div>

      <div class="post-footer">
        <a href="/blog" class="back-link">‚Üê Back to all posts</a>
      </div>
    </article>

    <Footer />
  </div>

  <script is:inline src="/blog-tracking.js"></script>
</BaseLayout>

